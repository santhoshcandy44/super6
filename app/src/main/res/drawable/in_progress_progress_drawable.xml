<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#e0e0e0"/> <!-- Light gray for background -->
        </shape>
    </item>
    <!-- Progress Layer -->
    <item android:id="@android:id/progress">
        <shape android:shape="rectangle">
            <solid android:color="#ffeb3b"/> <!-- Yellow for in progress -->
        </shape>
    </item>
</layer-list>
